{
  // Tasks for VS Python Environment
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Greet",
      "type": "shell",
      "command": "echo Hello"
    },
    {
      "label": "Destroy Environment",
      "type": "shell",
      "command": "virtualenv deactivate"
